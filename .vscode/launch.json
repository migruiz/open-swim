{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Open Swim (uv)",
            "type": "debugpy",
            "request": "launch",
            "module": "open_swim.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Python: Open Swim (uv run)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/open_swim/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        }
    ]
}
